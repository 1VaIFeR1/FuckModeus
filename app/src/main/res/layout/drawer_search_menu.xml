<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ГЛАВНОЕ МЕНЮ (ПОИСК) - БЕЗ ИЗМЕНЕНИЙ -->
    <RelativeLayout
        android:id="@+id/layout_main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/btnGoToSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="?attr/colorControlNormal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnGoToSettings"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search_field"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Поиск..."
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingVertical="12dp" />

                    <ImageButton
                        android:id="@+id/btnFind"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_search" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbSearch"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Закрепленные:"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPinned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="?android:attr/listDivider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- МЕНЮ НАСТРОЕК (КАСТОМИЗАЦИЯ) -->
    <LinearLayout
        android:id="@+id/layout_settings_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#2F2F2F"> <!-- Твой цвет фона -->

        <!-- ЗАГОЛОВОК И НАЗАД -->
        <LinearLayout
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="16dp"/>

        <!-- БЛОК 1: ИСТОЧНИК -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_settings_block"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Источник данных"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <RadioButton
                android:id="@+id/rbSfedu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SFEDU Modeus (Авторизация)"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbRdCenter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ИКТИБ (Без входа)"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/btnEditUrl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#AAAAAA"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

        <!-- БЛОК 2: ПАРАМЕТРЫ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_settings_block"
            android:layout_marginBottom="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchShowEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отображать 'Нет пары'"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555555"
                android:layout_marginVertical="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Режим навигации:"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerNavMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:backgroundTint="#FFFFFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555555"
                android:layout_marginVertical="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchParallel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параллельные расписания"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/containerParallelSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:layout_marginBottom="16dp">

                <!-- Текст сверху -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Количество профилей (2-10):"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Строка: Поле ввода + Кнопка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Поле ввода с фоном как у поиска -->
                    <EditText
                        android:id="@+id/etParallelCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#FFFFFF"
                        android:maxLength="2"
                        android:background="@drawable/bg_search_field"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:hint="2"/>

                    <Button
                        android:id="@+id/btnSaveParallel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ОК"
                        android:minWidth="60dp"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вид переключения:"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgProfileMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbModeBar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Кнопки"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/rbModeDropdown"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Список"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btnToggleAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дополнительные опции..."
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/containerAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateDb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Обновить базу (ID)"
                android:textColor="@android:color/white"
                android:backgroundTint="?attr/colorPrimary"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconTint="@android:color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportDb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Экспорт базы (JSON)"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="@android:color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogoutInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти из аккаунта"
            android:textColor="@android:color/white"
            android:backgroundTint="#B00020"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconTint="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</RelativeLayout>